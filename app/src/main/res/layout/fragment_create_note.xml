<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".NoteActivity"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="@string/create_note_title"
            android:maxLines="1"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/description_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/create_note_description"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/create_note_save_button" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/day_note_chb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day note" />

        <CheckBox
            android:id="@+id/long_term_chb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long-term" />

        <CheckBox
            android:id="@+id/temporary_chb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temporary" />

    </LinearLayout>

</FrameLayout>